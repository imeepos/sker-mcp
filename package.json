{
  "name": "@sker/mcp",
  "version": "1.0.1",
  "description": "Sker Daemon MCP Server - A decorator-driven MCP server with dependency injection",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "sker": "dist/main.cjs"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:tsc": "tsc",
    "dev": "tsx src/main.ts",
    "dev:build": "tsup --watch --onSuccess \"node dist/main.js\"",
    "start": "node dist/main.js",
    "cli": "node dist/cli.js",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No linter configured'",
    "claude": "claude --dangerously-skip-permissions"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "dependency-injection",
    "decorator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@sker/di": "^1.0.7",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
